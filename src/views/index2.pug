doctype html
html(ng-app='tables')
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		title Runebase
		meta(name='description', content='')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='stylesheet', href='/assets/material-icons.css')
		link(rel='stylesheet', href='/assets/runebase-icons.less')
		link(rel='stylesheet', href='/assets/vuetify.min.css')
		link(rel='shortcut icon', type='image/png', href='/assets/runebase.png')
		link(rel='stylesheet', href='/assets/bootstrap.min.css')
		link(rel='stylesheet', href='../assets/style.css')

	body(ng-controller='MainCtrl', data-spy='scroll', data-target='#navmenu')
		include includes/menu.pug
		section#top.top
			div(style='position: relative;')
				// particles.js container
				#particles-js
					img.nopointer(style='position: absolute; bottom:0px; ', src='/assets/mountain.png', alt='')
				.main_top_area.nopointer
					.single_slider.w-100
						h3 Lorem Ipsum
						p Put a Pickle on that Rustler
						div(style='height: 200px;')
						a.btn.btn-lg.showpointer(style='', href='https://downloads.runebase.io/runebase-0.15.1-' + os + '-' + ext)
							i.fa.fa-download
							| Runebase-#{os}-0.15.1.#{ext}
		section#about.anouncements(style='background-color: #000002')
					.py-5.text-center
						.col-xl-12.no-padding
							.single_webhost_left(style='background-color: #000002')
									.col-md-8.offset-sm-2
										.single_webhost_left_content
											h3.gtco-left(style='color: aliceblue') Anouncements
											table.table(ng-table='tableParams')
												tr.ann-padding(ng-repeat='item in $data')
													td.ann-padding(title="'time'") {{item.time}}
													td.ann-padding(title="'Message'") {{item.message}}						
			
		section.wallets#wallets
			.container.text-center
				h3.mt-3.mt-md-5 Choose your Runebase Wallet
				.blue-line.mx-auto(style='width: 72px;')
				ul.d-flex.justify-content-around.justify-content-md-center.list-unstyled.categories
					li.center-submenu.text-center.col-md-4.no-padding
						a.active.wallet.walletstyle(href='#' data-rel="desktop") Desktop
					li.center-submenu.text-center.col-md-4.no-padding
						a.wallet.walletstyle(href='#' data-rel="mobile") Mobile
					li.center-submenu.text-center.col-md-4.no-padding
						a.wallet.walletstyle(href='#' data-rel="web") Web			

			.container.wallet-cat
				.row.selection#desktop.text-center
					.col-md-12
						h3 Core
					.col-md-4.no-padding
						.row
							.col-md-8.offset-sm-2
								.single_webhost_left_content
									h3 Windows
									a.w-100.walletstyle(href='https://downloads.runebase.io/runebase-0.15.1-win64-setup.exe')
										p 64bit.exe
									a.w-100.walletstyle(href='http://downloads.runebase.io/runebase-0.15.1-win64.zip')
										p 64bit.zip
									a.w-100.walletstyle(href='http://downloads.runebase.io/runebase-0.15.1-win32-setup.exe')
										p 32bit.exe
									a.w-100.walletstyle(href='http://downloads.runebase.io/runebase-0.15.1-win32.zip')
										p 32bit.zip
					.col-md-4.no-padding
						.row
							.col-md-8.offset-sm-2
								.single_webhost_left_content
									h3 Mac OS
									a.w-100.walletstyle(href='http://downloads.runebase.io/runebase-0.15.1-osx.dmg')
										p osx.dmg
									a.w-100.walletstyle(href='http://downloads.runebase.io/runebase-0.15.1-osx.tar.gz')
										p osx.tar.gz
									a.w-100.walletstyle(href='http://downloads.runebase.io/runebase-0.15.1-osx64.tar.gz')
										p osx64.tar.gz
					.col-md-4.no-padding
						.row
							.col-md-8.offset-sm-2
								.single_webhost_left_content
									h3 Linux
									a.w-100.walletstyle(href='http://downloads.runebase.io/runebase-0.15.1-x86_64-linux-gnu.tar.gz')
										p x86_64.tar.gz
									a.w-100.walletstyle(href='http://downloads.runebase.io/runebase-0.15.1-i686-pc-linux-gnu.tar.gz')
										p i686.tar.gz
									a.w-100.walletstyle(href='http://downloads.runebase.io/runebase-0.15.1-arm-linux-gnueabihf.tar.gz')
										p arm.tar.gz
									a.w-100.walletstyle(href='http://downloads.runebase.io/runebase-0.15.1-aarch64-linux-gnu.tar.gz')
										p aarch64.tar.gz
				.row.selection#mobile.d-none.text-center
					.col-md-12.text-center
						h3 Mobile
					.col-md-6.no-padding
						.row
							.col-md-8.offset-sm-2
								.single_webhost_left_content
									h3 Android
									.w-100.walletstyle(href='https://explorer.runebase.io')
										p apk
					.col-md-6.no-padding
						.row
							.col-md-8.offset-sm-2
								.single_webhost_left_content
									h3 IOS
									a.w-100.walletstyle(href='https://explorer.runebase.io')
										p ios
				.row#web.selection.d-none
					.col-md-12.text-center
						h3 Web
						#app
							block content
								wallet
						p Webwallet also available at
						a.w-100.walletstyle(href='https://www.runebase.io/wallet')
							p https://www.runebase.io/wallet

		section#services.services
			.container
				.row.py-5.text-center
					.col-md-6.no-padding
						.single_webhost_left
							.row
								.col-md-8.offset-sm-2
									.single_webhost_left_img
										a(href='https://explorer.runebase.io')
											img(src='/assets/explorer.png', alt='')
									.single_webhost_left_content
										a.h3(href='https://explorer.runebase.io',style='color: aliceblue') Runebase Explorer
										a(href='https://explorer.runebase.io')
											p Insight explorer makes it easy to track transactions on runebase chain.
					.col-md-6.no-padding
						.single_webhost_left
							.row
								.col-md-8.offset-sm-2
									.single_webhost_left_img
										a(href='https://explorer.runebase.io')
											img(src='/assets/explorer.png', alt='')
									.single_webhost_left_content
										a.h3(href='https://explorer.runebase.io',style='color: aliceblue') Runebase Explorer
										a(href='https://explorer.runebase.io')
											p Insight explorer makes it easy to track transactions on runebase chain.
		section#dapps.dapps
			.dapps_overlay
				.container.mx-auto.text-center
					.row.center-block
						.col
							.single_dapps_img
								img(src='/assets/award.png', height='128px', width='128px', alt='')
							.separator
							h3 PlaceHolder
							p PlaceHolder Text								
						.col
							.single_dapps_img
								img(src='/assets/block.png', height='128px', width='128px', alt='')
							.separator
							h3 PlaceHolder
							p PlaceHolder Text								
						.col
							.single_dapps_img
								img(src='/assets/treasure.png', height='128px', width='128px', alt='')
							.separator
							h3 PlaceHolder
							p PlaceHolder Text								
						.col
							.single_dapps_img
								img(src='/assets/lock.png', height='128px', width='128px', alt='')
							.separator
							h3 PlaceHolder
							p PlaceHolder Text


	
		section#contact.contact
			.container
					.main_contact
						.contactwithmap_content
							.contact_overlay
								.col-md-8.col-12
									.locations_map
								.col-md-3.col-12
									.contactwithmap_menu
										h2 Lorem Ipsum
										ul.footer_menu
											li
												a(href='#home') Placeholder
											li
												a(href='#feature') Placeholder
											li
												a(href='#services') Placeholder
											li
												a(href='#downloads') Placeholder
											li
												a(href='#working') Placeholder
		include includes/foot.pug

		script(src='/assets/angular.js')
		script(src='/assets/ng-table.js')
		script(src='/assets/angular.custom.index.js')
		script(src='/assets/jquery.min.js')
		script(src='/assets/jquery.easing.min.js')
		script(src='/assets/bootstrap.min.js')
		script(src='/assets/particles.js')
		script(src='/assets/custom.js')
		script(src="assets/vuetify.min.js")
		script(src="assets/bundle.js")
