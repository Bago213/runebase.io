doctype html
html(ng-app='tables')
  head
    meta(charset='utf-8')
    title Manage
    link(rel='stylesheet', href='style.css')
    link(rel='stylesheet', href='/assets/bootstrap.min.css')    
    link(rel='stylesheet', href='/assets/ng-table.css')    
    link(rel='shortcut icon', type='image/png', href='/assets/runebase.png')
    link(rel='stylesheet', href='/assets/bootstrap.min.css')
    link(rel='stylesheet', href='../assets/style.css')
  body(ng-controller='MainCtrl', data-target='#navmenu')
  include includes/menu.pug
  section
    .row.customh60
    .row    
      table.table(ng-table='tableParams', show-filter='true')
        tr(ng-repeat='item in $data')
          td(title="'Git ID'", filter="{ git: 'text'}", sortable="'git'") {{item.git}}
          td(title="'Message'", filter="{ message: 'text'}", sortable="'message'") {{item.message}}
          td(title="'Link'", filter="{ url: 'text'}", sortable="'url'") {{item.url}}
          td(title="'Author'", filter="{ author: 'text'}", sortable="'author'") {{item.author}}
  include includes/foot.pug
    script(src='/assets/angular.js')
    script(src='/assets/ng-table.js')
    script(src='/assets/angular.custom.manage.js')
    script(src='/assets/jquery.min.js')
    script(src='/assets/jquery.easing.min.js')
    script(src='/assets/bootstrap.min.js')
    script(src='/assets/auth.js')